local ServerHop = function()
    local HttpService = game:GetService('HttpService')
    local TeleportService = game:GetService('TeleportService')
    
    local Success, Result = pcall(function()
        return HttpService:GetAsync(string.format(
            'https://games.roblox.com/v1/games/%d/servers/Public?sortOrder=Asc&limit=100',
            game.PlaceId
        ))
    end)

    if not Success then
        warn('Failed to fetch servers:', Result)
        return TeleportService:Teleport(game.PlaceId)
    end

    local Data = HttpService:JSONDecode(Result)
    local Servers = {}
    
    for _, Server in Data.data do
        if type(Server) == 'table' and Server.id ~= game.JobId then
            table.insert(Servers, Server.id)
        end
    end

    if #Servers > 0 then
        TeleportService:TeleportToPlaceInstance(game.PlaceId, Servers[math.random(1, #Servers)])
    else
        TeleportService:Teleport(game.PlaceId)
    end
end

local LoadStart = tick()
if not game:IsLoaded() then 
    local LoadedConnection
    LoadedConnection = game.Loaded:Connect(function()
        LoadedConnection:Disconnect()
        if tick() - LoadStart > 30 then
           ServerHop()
        end
    end)
    game.Loaded:Wait()
    if tick() - LoadStart > 30 then
        return
    end
end

task.wait(5)

